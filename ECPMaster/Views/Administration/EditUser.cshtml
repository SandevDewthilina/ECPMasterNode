@model ECPMaster.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}
<div class="container">
    <section>
        <div class="page-main-header">@ViewData["Title"]</div>
        <div class="page-sub-header">
            Create a agent node with suitable configurations
        </div>
    </section>
    <section class="mt-2 main-page-content">
        <div class="col-sm-12">
            <div class="d-flex justify-content-end">
                <form asp-action="ChangePassword" asp-controller="Administration" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="my-btn-danger">Change Password</button>
                </form>
            </div>
            <form method="post" asp-action="EditUser" asp-controller="Administration">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="my-card mt-3">
                    <div class="my-card-header">User ID: @Model.Id</div>
                    <div class="my-card-body">
                        <div class="my-input-label mb-1">Email</div>
                        <input
                            class="form-control"
                            type="text"
                            asp-for="Email"
                            placeholder="e.g. Administrator"/>
                        <div class="my-input-footer-label mb-2 mt-1">
                            *Email for the selected role
                        </div>
                        <div class="my-input-label mb-1">Username</div>
                        <input
                            class="form-control"
                            type="text"
                            asp-for="UserName"
                            placeholder="e.g. Myname"/>
                        <div class="my-input-footer-label mb-2 mt-1">
                            *Username for the selected role
                        </div>
                        <div class="d-flex justify-content-end mt-2">
                            <button class="my-btn mr-2">Update</button>
                            <a asp-action="ListUsers" asp-controller="Administration" class="my-btn">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>

            <div class="d-flex justify-content-end mt-5">
                <a class="my-btn" asp-action="ListRoles" asp-controller="Administration" asp-route-roleId="@Model.Id">User roles</a>
            </div>

            <div class="my-card mt-3">
                <div class="my-card-header">Roles assigned for the user</div>
                <div class="my-card-body">
                    <ol style="font-size: 14px;">
                        @foreach (var role in Model.Roles)
                        {
                            <li>@role</li>
                        }
                    </ol>
                </div>
            </div>
        </div>
    </section>
</div>